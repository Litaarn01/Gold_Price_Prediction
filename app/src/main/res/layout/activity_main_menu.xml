<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF9F9"
    android:padding="0dp">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#A5D6A7"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Tombol Back -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_custom_back"
            android:contentDescription="Kembali" />

        <!-- Judul di tengah -->
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Halaman Utama"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />
    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_marginBottom="16dp" />

    <!-- Item 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            style="@style/MenuItem"
            android:layout_height="80dp"
            android:onClick="openAbout">

            <ImageView
                style="@style/MenuIcon"
                android:layout_width="16dp"
                android:src="@drawable/icon_about" />

            <TextView
                android:text="Tentang Aplikasi"
                style="@style/MenuText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Item 2 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            style="@style/MenuItem"
            android:layout_height="80dp"
            android:onClick="openDataset">

            <ImageView
                android:src="@drawable/ic_menu_book"
                style="@style/MenuIcon" />

            <TextView
                android:text="Dataset"
                style="@style/MenuText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Item 3 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            style="@style/MenuItem"
            android:layout_height="80dp"
            android:onClick="openFitur">

            <ImageView
                android:src="@drawable/ic_insert_drive_file"
                style="@style/MenuIcon" />

            <TextView
                android:text="Fitur"
                style="@style/MenuText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Item 4 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            style="@style/MenuItem"
            android:layout_height="80dp"
            android:onClick="openModel">

            <ImageView
                android:src="@drawable/ic_check_circle"
                style="@style/MenuIcon" />

            <TextView
                android:text="Model"
                style="@style/MenuText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Item 5 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            style="@style/MenuItem"
            android:layout_height="80dp"
            android:onClick="openSimulasi">

            <ImageView
                android:src="@drawable/ic_bar_chart"
                style="@style/MenuIcon" />

            <TextView
                style="@style/MenuText"
                android:layout_width="wrap_content"
                android:text="Simulasi" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Item 5 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            style="@style/MenuItem"
            android:layout_height="80dp"
            android:onClick="openProfile">

            <ImageView
                android:src="@drawable/ic_person"
                style="@style/MenuIcon" />

            <TextView
                style="@style/MenuText"
                android:layout_width="wrap_content"
                android:text="Profile" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profileDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Investasi tanpa cemas \ndengan nabung emas!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="24dp"/>

</LinearLayout>
